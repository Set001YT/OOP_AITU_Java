public class Solution_2_1_2 {
    public static final String ODD = "Odd";
    public static final String EVEN = "Even";
    public static String[] strings = new String[5]; // Initialize the array with 5 elements

    public static void main(String[] args) {
        // Fill the array based on the index being even or odd
        for (int i = 0; i < strings.length; i++) {
            if (i % 2 == 0) {
                strings[i] = EVEN; // Assign "Even" if the index is even
            } else {
                strings[i] = ODD; // Assign "Odd" if the index is odd
            }
        }

        // Debugging: Print the array to verify
        System.out.print("index = 0");
        System.out.println("; value = " + strings[0]);
        System.out.print("index = 1");
        System.out.println("; value = " + strings[1]);
        System.out.print("index = 2");
        System.out.println("; value = " + strings[2]);
        System.out.print("index = 3");
        System.out.println("; value = " + strings[3]);
        System.out.print("index = 4");
        System.out.println("; value = " + strings[4]);
    }
}
