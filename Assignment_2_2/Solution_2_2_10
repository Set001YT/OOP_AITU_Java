/*
Array Analysis
*/
public class Solution_2_2_10 {
    public static void main(String[] args) {
        int[] array = {123, 7, -14, 67, 16, 98, 75, 576};
        System.out.println("In array: ");
        printArray(array);
        System.out.println("Minimum number: " + getMinValue(array));
        System.out.println("Maximum number: " + getMaxValue(array));
    }

    // Static method to find maximum value
    public static int getMaxValue(int[] array) {
        int max = Integer.MIN_VALUE;
        for (int value : array) {
            if (value > max) {
                max = value;
            }
        }
        return max;
    }

    // Static method to find minimum value
    public static int getMinValue(int[] array) {
        int min = Integer.MAX_VALUE;
        for (int value : array) {
            if (value < min) {
                min = value;
            }
        }
        return min;
    }

    // Static method to print the array
    public static void printArray(int[] array) {
        for (int i : array) {
            System.out.print(i + " ");
        }
        System.out.println();
    }
}
